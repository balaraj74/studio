rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data.
    // The {userId} wildcard captures the user's ID from the path.
    // request.auth.uid is the ID of the user making the request.
    // This rule ensures a user can only access documents under their own user ID.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}