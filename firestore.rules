
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all users for all collections
    // Warning: This is insecure for production apps.
    // You should restrict access based on user authentication.
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Secure rule example: Only allow users to read/write their own data
    // match /users/{userId}/{documents=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
